<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="Theme.AppCompat.Light">
        <item name="cornerRadius">13.5dp</item>
        <item name="android:color">@color/main</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>

        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingStart">90dp</item>
        <item name="android:paddingEnd">90dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>

        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonText">

        <item name="backgroundTint">@android:color/transparent</item>


    </style>

    <style name="ButtonFavorite">
        <item name="cornerRadius">17.5dp</item>
        <item name="android:color">@color/main</item>
        <item name="srcCompat">@drawable/baseline_star_outline_24</item>
        <item name="android:padding">10dp</item>
        <item name="backgroundTint">@color/main</item>

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="textCardView">
        <item name="android:gravity">fill_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="imageCardView">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingRight">35dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:cropToPadding">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="infotextBuild">
        <item name="android:textColor">@color/infotextBuild</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">16sp</item>


    </style>

    <style name="titletextBuild">

        <item name="android:textColor">#353535</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">20sp</item>


    </style>
    <style name="searchbuildingBG" >
        <item name="background">@color/bgSearchBuild</item>
    </style>


</resources>



